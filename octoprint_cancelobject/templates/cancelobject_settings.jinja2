<form class="form-horizontal">
    <div class="control-group">
    	<h4>PLEASE NOTE: This currently only works with Simplify3D processes.</h4>
        <h3>Regular Expressions</h3>
        <p>
        <label class="control-label">{{ _('Object Regular Expression') }}</label>
        <div class="controls">
        	<i class="icon icon-info-sign" title="Your slicer's object-specific comment line. Uses standard python regular expressions." data-toggle="tooltip"></i>
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cancelobject.object_regex">     
        </div>
        <br>
        <label class="control-label">{{ _('Object Replacement Tag') }}</label>
        <div class="controls">
            <i class="icon icon-info-sign" title="Replacement tag for object comments, do not use semi-colon comments as these get stripped" data-toggle="tooltip"></i>
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cancelobject.reptag">     
        </div>
        <label class="control-label">{{ _('Ignored Object Names') }}</label>
        <div class="controls">
            <i class="icon icon-info-sign" title="Comma delimited list of object names that will not appear in the Cancel Objects Tab" data-toggle="tooltip"></i>
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cancelobject.ignored">     
        </div>
        <h3>GCODE</h3>
        <p>
        <label class="control-label">{{ _('Before skip GCODE') }}</label>
        <div class="controls">
        	<i class="icon icon-info-sign" title="Comma delimited list of GCODE commands to inject BEFORE skipping an object" data-toggle="tooltip"></i>
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cancelobject.beforegcode">
        </div>
        <br>
        <label class="control-label">{{ _('After skip GCODE') }}</label>
        <div class="controls">
            <i class="icon icon-info-sign" title="Comma delimited list of GCODE commands to inject AFTER skipping an object" data-toggle="tooltip"></i>
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cancelobject.aftergcode">
        </div>
        <label class="control-label">{{ _('Allowed GCODE') }}</label>
        <div class="controls">
            <i class="icon icon-info-sign" title="Any GCODE commands that should not be skipped can be placed here as a comma delimited list" data-toggle="tooltip"></i>
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cancelobject.allowed">
        </div>
        <h3>Other</h3>
        <p>
        <label class="control-label">{{ _('Show active in NavBar') }}</label>
        <div class="controls">
        	<i class="icon icon-info-sign" title="Show the active object in NavBar. Note: this switches when object is queued, not when printing move has begun." data-toggle="tooltip"></i>
        	<input type="checkbox" data-bind="checked: settings.plugins.cancelobject.shownav">
        </div>
        <br>
        <!--
        <label class="control-label">{{ _('Pause on cancel') }}</label>
        <div class="controls">
        	<i class="icon icon-info-sign" title="Issue an octoprint pause if the active object is cancelled" data-toggle="tooltip"></i>
        	<input type="checkbox" data-bind="checked: settings.plugins.cancelobject.pause">
        </div>
        -->
    </div>
</form>
